#!/usr/bin/env bash 

hello(){
	local s=$1
	echo "hello "$s"!"
}

goodbye(){
	local s=$!
	echo "goodbye "$1"!"
}

if (( $# == 0)); then
	echo 'name required!' >&2
	exit 1
fi

for name in "$@"; do
	if [[ $name == n* ]]; then
		hello "$name"
	elif [[ $name == b* ]]; then 
		hello "$name"
	else
		goodbye "$name"
	fi
done


